extends layout

block content
  h1= title
  - var rows = Number(query.rows) 
  - var cols = Number(query.cols)
  p Rows: #{rows} Columns: #{cols}
  - if(!(Number.isInteger(rows)) || !(Number.isInteger(cols)))
    p Rows and Columns passed are not integers
  - else if(rows <= 1 || rows >= 10)
    p Rows out of range - must be in 1 to 10
  - else if(cols <= 1 || cols >= 10) 
    p Columns out of range - must be in 1 to 10
  - else{
    table#outer 
      - for(let i=0; i<rows; i++) {
        tr#middle
          - for(let j = 0; j < cols; j++) {
            - if(i==j)
              td= 1
            - else if(j>i)
              td= (j-i)+1
            - else if(j<i)
              td= 0
          - }
      - }
  - }